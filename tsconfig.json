{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "incremental": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
        "@/*": ["src/*"]
      }
  },
  "include": ["src", "test"]
}
